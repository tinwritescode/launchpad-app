{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "scripts/**/*.ts",
    "src/utils/**/*.ts",
    "test/**/*.ts",
    "typechain-types/**/*.ts"
  ],
  "exclude": ["node_modules", "contracts"],
  "files": ["./hardhat.config.ts"]
}
