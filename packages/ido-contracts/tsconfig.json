{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "scripts/**/*.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "typechain-types/**/*.ts"
  ],
  "exclude": ["node_modules", "contracts"],
  "files": ["./hardhat.config.ts"]
}
